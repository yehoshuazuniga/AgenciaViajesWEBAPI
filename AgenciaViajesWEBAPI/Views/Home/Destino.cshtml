<div class="row">
    <div class="col-10" id="lista">
        <h1 class="text-center" style="font-weight:600; font-size:5.5rem">Destinos</h1>
        <button id="CraarRegstro" class="btn btn-primary " onclick="CrearRegistro()">Crear Destino</button>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Ciudad</th>
                    <th>Pais</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tableBody"></tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-10" id="editado" style="display:none">
        <h4>Editar / Registrar  destino</h4>
        <form class="form-group" id="editForm">
            <input id="editDestinoID" type="hidden" name="DestinoID" />
            <p><label>Ciudad</label><input id="editCiudad" name="Ciudad" class="form-control" /></p>
            <p><label>Pais</label><input id="editPais" name="Pais" class="form-control" /></p>
            <button id="submitEdit" class="btn btn-primary" onclick="Guardar()">Guardar</button>
        </form>
    </div>
</div>

